---
import { ViewTransitions } from 'astro:transitions';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Doble Tracción - Expertos en vehículos 4x4" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--accent: 252, 211, 77;
		--accent-light: 253, 230, 138;
		--accent-dark: 217, 119, 6;
	}
	
	html {
		font-family: system-ui, sans-serif;
		scroll-behavior: smooth;
	}
	
	body {
		margin: 0;
		padding: 0;
	}

	@tailwind base;
	@tailwind components;
	@tailwind utilities;
</style>